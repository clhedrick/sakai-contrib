//done in producer
// otpkey = some value
</script>
<script type="text/javascript">
//<![CDATA[

jQuery(document).ready(function(){
	var change = false;
    // initialize the toggles on the page
    jQuery("div.toggleHeader").click(function () { 
       asnn2.toggleSubsection(".toggleSubsection", this);
     });
    
    //Init override assignment-level resubmission checkbox
    jQuery("input[name='page-replace\:\:override_settings']").click(function(){
        asnn2gradeview.override_submission_settings();;
    });
    asnn2gradeview.override_submission_settings();
    
    //Init resubmission set accept until checkbox
    jQuery("input[name='page-replace\:\:require_accept_until']").click(function(){
        asnn2gradeview.set_accept_until_on_submission_level();
    });
    asnn2gradeview.set_accept_until_on_submission_level();

    jQuery('.previous_link').click(function() {
        var that = jQuery(this);
        var gradingChanged = asnn2gradeview.isGradingChanged();
        var numSubmittedVersions = $('#page-replace\\:\\:numSubmittedVersions').val();	
        if (gradingChanged)
        {
            asnn2gradeview.saveFeedback("PREV", that.attr('href')); 
            return false;
        }
    });

    jQuery('.next_link').click(function() {
        var that = jQuery(this);
        var gradingChanged = asnn2gradeview.isGradingChanged();
        var numSubmittedVersions = $('#page-replace\\:\\:numSubmittedVersions').val();	
        if (gradingChanged) {
            asnn2gradeview.saveFeedback("NEXT", that.attr('href')); 
            return false;
        }
    });

    jQuery('.returnToList_link').click(function() {
        var that = jQuery(this);
        var gradingChanged = asnn2gradeview.isGradingChanged();
        var numSubmittedVersions = $('#page-replace\\:\\:numSubmittedVersions').val();	
        if (gradingChanged) {
            asnn2gradeview.saveFeedback("RETURNTOLIST", that.attr('href')); 
            return false;
        }
    });

    var fadeSuccessMsg = function() {
        jQuery('.success').fadeOut("slow");
    }   
    setTimeout(fadeSuccessMsg,10000);
    
    
});

//]]>

</script>
